<Window x:Class="ClassRoomBusyness.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassRoomBusyness"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800" FontFamily="Montserrat">
    <Grid>
        <Border
            Width="50"
            Height="20"
            BorderThickness="2"
            BorderBrush="White"
            CornerRadius="10"
            Background="White"
            >
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Opacity="0.16"/>
            </Border.Effect>
            <Grid>
                <TextBlock
                    Text="310" 
                    Height="15"
                    Margin="0 0 0 0 "
                    FontSize="12"
                    Grid.Row="2"
                    Grid.RowSpan="2" 
                    Foreground="#FF747474"
                    HorizontalAlignment="Center"
                    />
            </Grid>
        </Border>
    </Grid>
</Window>
